{% extends 'user.html.twig' %}

{% block title %}Données personnelles de {{ app.user.prenom }} {{ app.user.nom }}{% endblock %}

{% block body %}
	<div class="grix xs4 container">
		{% for message in app.flashes('message') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 success">{{message}}</div>
			</div>
		{% endfor %}
		<div class="col-xs4">
			<h1>Données personnelles de {{ app.user.prenom }} {{ app.user.nom }}</h1>
            <a href="{{ path('users_data_download') }}" class="btn blue">Télécharger les données</a>
		</div>
		<div class="col-xs1">Nom :</div>
		<div class="col-xs3">{{ app.user.nom }}</div>
		<div class="col-xs1">Prénom :</div>
		<div class="col-xs3">{{ app.user.prenom }}</div>
		<div class="col-xs1">Date de naissance :</div>
		<div class="col-xs3">{{ app.user.datedenaissance }}</div>
        
	</div>
{% endblock %}